<div class="modal modal-dark fade" id="repostModal" tabindex="-1" role="dialog" aria-labelledby="repostModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <%= form_tag posts_path, method: "post" do %>
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="replyModalLabel">Repost</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="user">
            <span class="display-name">{{displayName}}</span>
            <small class="username">{{username}}</small>
            &middot;
            <small class="created-at">{{createdAt}}</small>
          </div>
          <p class="original-post-content"></p>
          <input type="hidden" name="original_post_id">
          <input type="hidden" name="original_user_id">
          <input type="hidden" name="post[repost]" value="true">
          <input type="hidden" name="post[type]" value="reply">
          <div class="form-group">
            <label for="message-text" class="col-form-label">Add message to repost (optional)</label>
            <textarea name="post[content]" class="form-control" id="message-text"></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Dismiss</button>
          <button type="submit" class="btn btn-primary">Repost</button>
        </div>
      </div>
    <% end %>
  </div>
</div>
