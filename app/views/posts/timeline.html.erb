<div class="row">
  <div class="col-lg-1">
    <%= render partial: "panels/profile", locals: { user: current_user } %>
    <%= render partial: "panels/footer", locals: { only_sidebar: true } %>
  </div>
  <div class="col-lg-2">
    <div class="panel timeline no-padding">
      <%= render partial: "new_post_form" %>
      <div id="infinite-scroll-container" class="posts">
        <div class="page">
          <%= render partial: "post_row", collection: @posts, as: :post %>
        </div>
      </div>
    </div>
    <%= paginate @posts, remote: true %>
  </div>
</div>
